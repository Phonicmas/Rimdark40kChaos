<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Chaos Research Base -->
  <ResearchProjectDef Name="BEWH_ChaosResearchBase" Abstract="True">
    <techLevel>Neolithic</techLevel>
    <tab>BEWH_WH40kTab</tab>
    <baseCost>3000</baseCost>
  </ResearchProjectDef>

  <!-- Chaos Research High Tech Base -->
  <ResearchProjectDef Name="BEWH_ChaosResearchHighTechBase" ParentName="BEWH_ChaosResearchBase" Abstract="True">
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
  </ResearchProjectDef>

  <!-- Undivided -->
  <ResearchProjectDef ParentName="BEWH_ChaosResearchBase">
    <defName>BEWH_UndividedResearch</defName>
    <label>Secrets of the Undivided</label>
    <description>Unlocks the secrets of the Undivided necessary to begin the path to chaos.</description>
    <researchViewX>3</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>

